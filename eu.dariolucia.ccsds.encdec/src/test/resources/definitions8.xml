<ns1:packet_definitions xmlns:ns1="http://dariolucia.eu/ccsds/encdec">
    <packets>
        <packet id="DEF1">
            <structure>
                <!-- Signed integer 3 bits: 3 -->
                <parameter id="PARAM1">
                    <type_fixed type="SIGNED_INTEGER" length="3" />
                    <parameter_fixed parameter="PP1" />
                </parameter>
                <!-- Float 32 bits: 35 -->
                <parameter id="PARAM2">
                    <type_fixed type="REAL" length="1" />
                    <parameter_fixed parameter="PP2" />
                </parameter>
                <!-- Unsigned integer 6 bits: 41 -->
                <parameter id="PARAM3">
                    <type_fixed type="UNSIGNED_INTEGER" length="6" />
                    <parameter_fixed parameter="PP3" />
                </parameter>
                <!-- Boolean 1 bit: 42 -->
                <parameter id="PARAM4">
                    <type_fixed type="BOOLEAN" length="0" />
                    <parameter_fixed parameter="PP4" />
                </parameter>
                <!-- Boolean 1 bit: 43 -->
                <parameter id="PARAM5">
                    <type_fixed type="BOOLEAN" length="0" />
                    <parameter_fixed parameter="PP5" />
                </parameter>
                <!-- Bitstring 13 bits: 56 -->
                <parameter id="PARAM6">
                    <type_fixed type="BIT_STRING" length="13" />
                    <parameter_fixed parameter="PP6" />
                </parameter>
                <!-- Octet string 3 bytes: 80 -->
                <parameter id="PARAM7">
                    <type_fixed type="OCTET_STRING" length="3" />
                    <parameter_fixed parameter="PP7" />
                </parameter>
                <!-- Char string 7 bytes: 136 -->
                <parameter id="PARAM8">
                    <type_fixed type="CHARACTER_STRING" length="7" />
                    <parameter_fixed parameter="PP8" />
                </parameter>
                <!-- Boolean 1 bit: 137 -->
                <parameter id="PARAM9">
                    <type_fixed type="BOOLEAN" length="0" />
                </parameter>
                <!-- Absolute time 6 bytes: 185 -->
                <parameter id="PARAM10">
                    <type_fixed type="ABSOLUTE_TIME" length="1" />
                    <parameter_fixed parameter="PP10" />
                </parameter>
                <!-- Relative time 2 bytes: 201 -->
                <parameter id="PARAM11">
                    <type_fixed type="RELATIVE_TIME" length="2" />
                    <parameter_fixed parameter="PP11" />
                </parameter>
                <!-- Signed integer 3 bits: 204 -->
                <parameter id="PARAM12">
                    <type_fixed type="SIGNED_INTEGER" length="3" />
                    <parameter_fixed parameter="PP12" />
                </parameter>
            </structure>
        </packet>
    </packets>

    <parameters>
        <parameter id="PP1" external_id="1" description="Sample Parameter 1">
            <!-- length can be different for decoding but good enough to keep the value -->
            <type type="SIGNED_INTEGER" length="32" />
        </parameter>
        <parameter id="PP2" external_id="2" description="Sample Parameter 2">
            <type type="REAL" length="1" />
        </parameter>
        <parameter id="PP3" external_id="3" description="Sample Parameter 3">
            <type type="UNSIGNED_INTEGER" length="8" />
        </parameter>
        <parameter id="PP4" external_id="4" description="Sample Parameter 4">
            <type type="BOOLEAN" length="0" />
        </parameter>
        <parameter id="PP5" external_id="5" description="Sample Parameter 5">
            <type type="BOOLEAN" length="0" />
        </parameter>
        <parameter id="PP6" external_id="6" description="Sample Parameter 6">
            <type type="BIT_STRING" length="13" />
        </parameter>
        <parameter id="PP7" external_id="7" description="Sample Parameter 7">
            <type type="OCTET_STRING" length="3" />
        </parameter>
        <parameter id="PP8" external_id="8" description="Sample Parameter 8">
            <type type="CHARACTER_STRING" length="7" />
        </parameter>
        <parameter id="PP10" external_id="10" description="Sample Parameter 10">
            <type type="ABSOLUTE_TIME" length="1" />
        </parameter>
        <parameter id="PP11" external_id="11" description="Sample Parameter 11">
            <type type="RELATIVE_TIME" length="2" />
        </parameter>
        <parameter id="PP12" external_id="3" description="Sample Parameter 12">
            <type type="SIGNED_INTEGER" length="3" />
        </parameter>
    </parameters>

</ns1:packet_definitions>